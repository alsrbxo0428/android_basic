<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:rowCount="6"
    android:columnCount="5"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <EditText
        android:id="@+id/et1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal" />
    <EditText
        android:id="@+id/et2"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal" />

    <Button
        android:id="@+id/zero"
        android:text="0"
        android:layout_row="2"
        android:layout_column="0" />
    <Button
        android:id="@+id/one"
        android:text="1"
        android:layout_row="2"
        android:layout_column="1" />
    <Button
        android:id="@+id/two"
        android:text="2"
        android:layout_row="2"
        android:layout_column="2" />
    <Button
        android:id="@+id/three"
        android:text="3"
        android:layout_row="2"
        android:layout_column="3" />
    <Button
        android:id="@+id/four"
        android:text="4"
        android:layout_row="2"
        android:layout_column="4" />

    <Button
        android:id="@+id/five"
        android:text="5"
        android:layout_row="3"
        android:layout_column="0" />
    <Button
        android:id="@+id/six"
        android:text="6"
        android:layout_row="3"
        android:layout_column="1" />
    <Button
        android:id="@+id/seven"
        android:text="7"
        android:layout_row="3"
        android:layout_column="2" />
    <Button
        android:id="@+id/eight"
        android:text="8"
        android:layout_row="3"
        android:layout_column="3" />
    <Button
        android:id="@+id/nine"
        android:text="9"
        android:layout_row="3"
        android:layout_column="4" />

    <Button
        android:id="@+id/plus"
        android:text="+"
        android:layout_row="4"
        android:layout_column="0" />
    <Button
        android:id="@+id/minus"
        android:text="-"
        android:layout_row="4"
        android:layout_column="1" />
    <Button
        android:id="@+id/mul"
        android:text="*"
        android:layout_row="4"
        android:layout_column="2" />
    <Button
        android:id="@+id/div"
        android:text="/"
        android:layout_row="4"
        android:layout_column="3" />

    <TextView
        android:text="결과 : "
        android:layout_row="5"
        android:layout_column="0"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/result"
        android:text="결과값"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:textSize="20dp"/>

</GridLayout>